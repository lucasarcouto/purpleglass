generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  password     String
  name         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  notes        Note[]
  blobMetadata BlobMetadata[]

  @@map("users")
}

model Note {
  id        String   @id @default(uuid())
  userId    Int
  title     String
  content   Json
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
}

model BlobMetadata {
  id        String   @id @default(uuid())
  url       String   @unique
  userId    Int
  filename  String
  size      Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([url])
  @@map("blob_metadata")
}
