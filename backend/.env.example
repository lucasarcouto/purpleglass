NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# FFmpeg is required for audio transcoding (install via: brew install ffmpeg, apt-get install ffmpeg, etc.)

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=purpleglass
POSTGRES_PORT=5432

# Database Connection URL (uses Docker service name 'postgres')
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# JWT Authentication
JWT_SECRET="your_token_here"

# Vercel Blob
BLOB_READ_WRITE_TOKEN="your_token_here"